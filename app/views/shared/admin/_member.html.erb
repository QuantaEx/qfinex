<% if can? :read, Member %>
  <div class="card card-primary">
    <div class="card-header">
      <span>Member Info</span>
      <%= link_to 'View', url_for([:admin, member]), class: 'float-right', target: '_blank' %>
    </div>
    <div class="card-body">
      <%= description_for :member do %>
        <%= item_for member, :email %>
        <%= item_for member, :uid %>
        <%= item_for member, :created_at %>
        <hr class="split">
      <% end %>
    </div>
  </div>
<% end %>
